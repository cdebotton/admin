{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "24.0.21",
    "@types/node": "12.12.3",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@types/react-relay": "^7.0.0",
    "@types/react-router-dom": "^5.1.1",
    "@types/styled-components": "^4.1.20",
    "babel-plugin-relay": "^7.0.0",
    "eslint-plugin-jest": "^23.0.2",
    "graphql": "^14.5.8",
    "graphql-compiler": "^1.7.0",
    "polished": "^3.4.2",
    "prettier": "^1.18.2",
    "react": "^0.0.0-experimental-f6b8d31a7",
    "react-dom": "^0.0.0-experimental-f6b8d31a7",
    "react-relay": "^0.0.0-experimental-a1a40b68",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "relay-compiler": "^7.0.0",
    "relay-compiler-language-typescript": "^10.0.0",
    "styled-components": "^5.0.0-rc.1",
    "typescript": "^3.7.1-rc"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "relay": "relay-compiler --src ./src --schema ../data/schema.graphql --language typescript --artifactDirectory ./src/__generated__ --customScalars.Datetime=Date --customScalars.UUID=string --customScalars.Cursor=string"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "jest"
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "newlines-between": "always-and-inside-groups"
        }
      ],
      "no-restricted-imports": [
        "error",
        {
          "paths": [
            {
              "name": "styled-components",
              "message": "Please import from styled-components/macro."
            }
          ],
          "patterns": [
            "!styled-components/macro"
          ]
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babelMacros": {
    "styledComponents": {
      "pure": true
    },
    "relay": {
      "artifactDirectory": "./src/__generated__"
    }
  }
}
